<%- include ("partials/header") %>
<div class="ui main text container">
	<div class="ui huge header">Meme Stream</div>
	<div class="ui top attached segment">
		<div class="ui divided items">
			<% memes.forEach(function(meme){ %>
	<div class="item" >
		<div class="image">
			 <img src="<%= meme.image %>">
		</div>
		<div class="content">
			<a class="header" href="/memes/<%= meme._id %>"><%= meme.name %></a>
			<div class="meta">
				<span><%= meme.created.toDateString() %></span>
			</div>
			<div class="description">
				<p><%- meme.caption.substring(0,100) %>.....</p>
			</div>
			<div class="extra">
					<a class="ui floated basic violet button" href="/memes/<%= meme._id %>">Read More
				<i class="right Chevron icon"></i>
				</a>
			</div>
		</div>	
</div>
<% })  %>       
		</div>
	</div>
</div>
<%- include("partials/footer") %>