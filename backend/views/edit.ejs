<%- include ("partials/header") %>

<div class="ui main text container segment">
	<div class="ui huge header">Edit meme.title</div>
	<form class="ui form" action="/memes/<%=  meme._id %>?_method=PATCH" method="POST">
		<div class="field">
			<label>Owner Name</label>
					<input type="text" name="meme[name]" value="<%= meme.name %>">
		</div>
		<div class="field">
			<label>Image URL</label>
			<input type="text" name="meme[image]" value="<%= meme.image %>">
		</div>
		<div class="field">
			<label>Meme Caption</label>
			<textarea name="meme[caption]" required><%= meme.caption %></textarea>	
		</div>
	<input class="ui violet big basic button" type="submit">
	</form>
</div>

<%- include("partials/footer") %>