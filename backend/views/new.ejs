<%- include ("partials/header") %>

<div class="ui main text container segment">
	<div class="ui huge header">New Meme</div>
	<form class="ui form" action="/memes" method="POST">
		<div class="field">
			<label>Owner Name</label>
					<input type="text" name="meme[name]" placeholder="owner name">
		</div>
		<div class="field">
			<label>Image URL</label>
			<input type="text" name="meme[image]" placeholder="image">
		</div>
		<div class="field">
			<label>Meme Caption</label>
			<textarea name="meme[caption]" required></textarea>	
		</div>
	<input class="ui violet big basic button" type="submit">
	</form>
</div>

